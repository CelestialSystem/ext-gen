Ext.define('{appName}.view.main.MainView', {
  extend: 'Ext.Container',
  xtype: 'mainview',
  controller: 'mainviewcontroller',
  viewModel: {
    type: 'mainviewmodel'
  },

  items: [
    {
      xtype: 'component',
      cls: 'mainview',
      bind: {
        html: '{displayText}'
      }
    },
    {
      xtype: 'button',
      text: 'Click Me!',
      handler: 'onButtonClick'
    }
  ]
})
